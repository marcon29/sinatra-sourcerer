<h2><%= @topic.formatted_name %></h2>
<p><strong>Associated Subject: </strong><%= @topic.subject.formatted_name %></p>
<p><strong>Description: </strong><%= @topic.description %></p>
<p><%= sources_in_topic(@topic).count %> source<%= "s" if sources_in_topic(@topic).count!=1 %></p>


<div>        
    <form style="display: inline;" method="get" action="/topics/<%= @topic.slug %>/edit">
        <input type="submit" value="Edit Topic">
    </form>

    <form style="display: inline;" method="post" action="/topics/<%= @topic.slug %>">
        <input id="hidden" type="hidden" name="_method" value="delete">
        <input type="submit" value="Delete Topic">
    </form>
</div>
<hr>

<% sources_in_topic(@topic).each do |s| %>
    <section>
        <a href="http://<%= s.link %>" target="_blank"><h3><%= s.formatted_name %></h3></a>
        
        <p><strong>Publication: </strong><%= s.pub %> || <strong>Media Type: </strong><%= s.media_type %></p>
        <p><strong>Synopsis: </strong><%= s.synopsis %></p>        

        <div>
            <form style="display: inline;" method="get" action="/sources/<%= s.slug %>">
                <input type="submit" value="Source Details">
            </form>

            <form style="display: inline;" method="get" action="/sources/<%= s.slug %>/edit">
                <input type="submit" value="Edit Source">
            </form>

            <form style="display: inline;" method="post" action="/sources/<%= s.slug %>">
                <input id="hidden" type="hidden" name="_method" value="delete">
                <input type="submit" value="Delete Source">
            </form>
        </div>
        <hr>
    </section>
<% end %>




